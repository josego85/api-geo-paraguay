{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      },
      "babel-module": {}
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-plusplus": "off",
    "no-process-exit": "off",
    "class-methods-use-this": "off",
    "consistent-return": "error",
    "no-unused-expressions": "error",
    "node/no-missing-require": [
      "error",
      {
        "allowModules": [
          "config",
          "controllers",
          "database",
          "entities",
          "i18n",
          "helpers",
          "middleware",
          "models",
          "protocols",
          "repositories",
          "routes",
          "services"
        ]
      }
    ]
  }
}
